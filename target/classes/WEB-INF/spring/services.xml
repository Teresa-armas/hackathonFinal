<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="authService" class="org.academiadecodigo.hackathon.services.AuthServiceImpl">
        <property name="customerService" ref="customerService"/>
    </bean>

    <bean id="customerService" class="org.academiadecodigo.hackathon.services.CustomerServiceImpl">
        <property name="customerDao" ref="customerDao"/>
    </bean>

    <bean id="accountService" class="org.academiadecodigo.hackathon.services.AccountServiceImpl">
        <property name="accountDao" ref="accountDao"/>
    </bean>

</beans>
